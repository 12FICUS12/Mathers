{
	"env": {
		"es6": true,
		"browser": true,
		"jest": true
	},

	"globals": {
		"test": "readonly",
		"expect": "readonly",
		"require": "readonly",
		"module": "readonly",
		"__dirname": "readonly"
	},
	"extends": [
		"airbnb-base",
		"plugin:prettier/recommended",
		"prettier"
	],
	"plugins": [
		"babel",
		"prettier"
	],
	"rules": {
		"no-restricted-syntax": [
			"error",
			"LabeledStatement",
			"WithStatement"
		],
		"no-unused-vars": "off",
		"prettier/prettier": "error",
		"max-classes-per-file": "off",
		"quotes": ["error", "double"]
	}
}